# Production Environment Variables for Captely
# Copy this to .env and fill in your actual values

# Database Configuration (DigitalOcean Managed PostgreSQL)
DATABASE_URL=postgresql+asyncpg://username:password@your-db-host:25060/captely?sslmode=require

# Redis Configuration (DigitalOcean Managed Redis)
REDIS_URL=redis://username:password@your-redis-host:25061

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-256-bits-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# API Keys for Enrichment Services
ICYPEAS_API=your-icypeas-api-key
DROPCONTACT_API=your-dropcontact-api-key
HUNTER_API=your-hunter-api-key
APOLLO_API=your-apollo-api-key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# Flower Authentication
FLOWER_AUTH=admin:your-secure-flower-password

# Frontend URLs (will be your domain)
VITE_AUTH_URL=https://yourdomain.com/api/auth
VITE_IMPORT_URL=https://yourdomain.com/api/import
VITE_CREDIT_URL=https://yourdomain.com/api/credit
VITE_EXPORT_URL=https://yourdomain.com/api/export
VITE_ANALYTICS_URL=https://yourdomain.com/api/analytics
VITE_NOTIFICATION_URL=https://yourdomain.com/api/notification
VITE_BILLING_URL=https://yourdomain.com/api/billing
VITE_CRM_URL=https://yourdomain.com/api/crm

# Production Settings
NODE_ENV=production
ENVIRONMENT=production 