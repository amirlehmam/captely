{
    "manifest_version": 3,
    "name": "Captely SalesNav Scraper",
    "version": "0.1.0",
    "description": "Exporte les listes Sales Navigator vers Captely.",
    "permissions": ["storage", "scripting", "tabs", "activeTab"],
    "host_permissions": ["https://*.linkedin.com/*", "https://api.captely.local/*"],
    "background": { "service_worker": "bg.js" },
    "action": { "default_popup": "popup.html", "default_title": "Scraper Captely" },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/sales/*"],
        "js": ["content.js"]
      }
    ]
  }
  